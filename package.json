{
  "name": "fiscus-finnova",
  "version": "0.1.0",
  "description": "P2P Investment Finance Platform - Fiscus & Finnova",
  "private": true,
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "type-check": "turbo run type-check",
    "generate-pages": "node scripts/bulk-generate-pages.js",
    "generate-page": "node scripts/generate-pages.js",
    "extract-content": "node scripts/extract-content.js",
    "setup": "npm install && npm run generate-pages && npm run extract-content"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0",
    "yarn": ">=3.6.0"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "lucide-react": "^0.564.0"
  }
}
