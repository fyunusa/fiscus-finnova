NODE_ENV=development
PORT=4000
LOG_LEVEL=debug

# Database
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=fiscus_user
DB_PASSWORD=fiscus_password
DB_DATABASE=fiscus_db

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
