# =============================================
# Paygate / Toss Payments (1 Won Verification)
# =============================================
PAYGATE_API_URL=https://payments.toss.co.kr
PAYGATE_MERCHANT_ID=your_paygate_merchant_id
PAYGATE_API_KEY=your_paygate_api_key
